# =============================================================================
# REF - ENVIRONMENT CONFIGURATION
# =============================================================================

# Project Configuration
PROJECT_SLUG=ref

# Environment
NODE_ENV=development
TIMEZONE=UTC

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

POSTGRES_USER=strapi
POSTGRES_PASSWORD=strapi_password_secure
POSTGRES_DB=strapidb
POSTGRES_PORT_EXTERNAL=5432

# =============================================================================
# STRAPI BACKEND CONFIGURATION
# =============================================================================

# Strapi URL (used by Strapi itself for generating URLs)
STRAPI_URL=http://localhost:1337

# Strapi Security — Generate with: node scripts/generate-secrets.js
ADMIN_JWT_SECRET=your-admin-jwt-secret-key-here
ENCRYPTION_KEY=your-jwt-secret-key-here
API_TOKEN_SALT=your-api-token-salt-here
APP_KEYS=your-app-keys-here,another-app-key-here
TRANSFER_TOKEN_SALT=your-transfer-token-salt-here

# CORS
STRAPI_CORS_ORIGIN=http://localhost:3000,http://localhost:1337

# Demo data seeding
ENABLE_DEMO_ATHLETE_SEEDING=true

# =============================================================================
# NEXTJS FRONTEND CONFIGURATION
# =============================================================================

NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:1337
NEXT_PUBLIC_STRAPI_URL=http://localhost:1337

# Analytics (optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS=
NEXT_PUBLIC_GOOGLE_TAG_MANAGER=

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker Registry (for production images)
DOCKER_REGISTRY=ghcr.io/thevisitor-coding
DOCKER_IMAGE_TAG=latest

# Port Mappings (development)
STRAPI_PORT_EXTERNAL=1337
NEXTJS_PORT_EXTERNAL=3000

# =============================================================================
# MONITORING 
# =============================================================================

PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_DOMAIN=localhost

# OpenTelemetry (backend tracing — production only)
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_EXPORTER_OTLP_HEADERS=
OTEL_SERVICE_NAME=strapi-backend

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

BACKUP_RETENTION_DAYS=7

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

SMTP_HOST=
SMTP_PORT=
SMTP_SECURE=
SMTP_USER=
SMTP_PASS=
SMTP_DEFAULT_FROM=
SMTP_DEFAULT_REPLY_TO=
EMAIL_CONFIRMATION_URL=<domaine>/auth/email-confirmation

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment and modify for production:
# NODE_ENV=production
# STRAPI_URL=https://api.your-domain.com
# NEXT_PUBLIC_FRONTEND_URL=https://your-domain.com
# NEXT_PUBLIC_API_URL=https://api.your-domain.com
# STRAPI_CORS_ORIGIN=https://your-domain.com
# GRAFANA_ADMIN_PASSWORD=your-secure-password
# GRAFANA_DOMAIN=grafana.your-domain.com
# ENABLE_DEMO_ATHLETE_SEEDING=false